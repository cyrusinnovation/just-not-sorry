{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:import/errors", "prettier"],
  "globals": {
    "chrome": true,
    "analytics": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "overrides": [
    {
      "files": "**/*Spec.test.js",
      "env": {
        "jest": true,
        "es6": true
      },
      "plugins": ["jest"],
      "extends": ["eslint:recommended", "plugin:jest/recommended", "prettier"]
    }
  ]
}
